{
  "name": "cropperfinance-smart-contract",
  "version": "1.0.0",
  "scripts": {
    "push":"git add . && git commit -m 'auto updates' && git push",
    "switch-localnet":"solana config set --url localhost",
    "switch-devnet":"solana config set --url devnet",
    "switch-testnet":"solana config set --url testnet",
    "switch-mainnet-beta":"solana config set --url mainnet-beta",
    "start-server": "solana-test-validator",
    "build:v1": "cargo build-bpf --manifest-path=./contracts/yield-farming-v1/program/Cargo.toml --bpf-out-dir=dist",
    "clean:v1": "cargo clean --manifest-path=./contracts/yield-farming-v1/program/Cargo.toml && rm -rf ./dist",
    "deploy:v1":"solana program deploy dist/yield-farming-v1.so",
    "test:v1": "cargo test-bpf --manifest-path=./contracts/yield-farming-v1/program/Cargo.toml"
  }
}
